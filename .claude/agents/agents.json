        ]
      }
    },
    
    "security-auditor": {
      "name": "Eywa CRM Security Auditor",
      "model": "claude-sonnet-4-20250514",
      "temperature": 0.2,
      "role": "Security specialist for Android CRM applications",
      
      "focus_areas": [
        "Authentication and Authorization",
        "Data Protection (PII, GDPR)",
        "API Security",
        "Mobile Security (Root detection, etc.)",
        "Input Validation",
        "Secure Storage"
      ],
      
      "triggers": {
        "paths": [
          "**/auth/**",
          "**/api/**",
          "**/security/**",
          "**/*Secret*",
          "**/*Password*",
          "**/*Token*",
          "**/AndroidManifest.xml",
          "**/*.env*"
        ]
      }
    },
    
    "testing-assistant": {
      "name": "Eywa CRM Testing Assistant",
      "model": "claude-sonnet-4-20250514",
      "role": "Testing expert for React Native applications",
      
      "responsibilities": [
        "Suggest test cases for new features",
        "Review test quality and coverage",
        "Identify untested edge cases",
        "Recommend testing strategies"
      ],
      
      "test_patterns": {
        "unit": "Test individual functions and components in isolation",
        "integration": "Test component interactions and data flow",
        "e2e": "Test complete user workflows",
        "coverage": "Aim for 70%+ coverage on new code"
      }
    }
  },
  
  "global_settings": {
    "max_tokens": 8192,
    "retry_attempts": 3,
    "timeout_seconds": 120,
    "cost_optimization": {
      "skip_for_branches": ["dependabot/*"],
      "skip_for_paths": ["*.md", "*.txt", "docs/**"],
      "cache_reviews": true
    }
  }
}